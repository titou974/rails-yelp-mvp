<div class="container my-3">
  <h1>Add a new restaurant</h1>
  <%=simple_form_for(@restaurant) do |f|%>
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :phone_number %>
    <%= f.input :address %>
    <%= f.submit "Add the restaurant", class: "btn btn-primary" %>
  <% end %>
</div>
